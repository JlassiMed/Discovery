<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:background="@drawable/background_anim"
    android:padding="30dp"
    tools:context="com.example.discovery.AddCountryActivity">


    <EditText
        android:id="@+id/country_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Country Name"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/country_capital"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Capital"
        android:textColor="@android:color/black"
        />
    <Button
        android:id="@+id/btn_add_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD FlAG Picture"
        android:textColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/country_flag_get"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7" />
    <Button
        android:id="@+id/btn_add_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""

        android:textColor="@color/colorAccent" />
</LinearLayout>